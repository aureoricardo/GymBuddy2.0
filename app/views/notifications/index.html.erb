<div class="notifications-page">
  <h2 class="title">Notifications</h2>

  <% @notifications.each do |notification| %>
    <div class="notification">
<%= image_tag(notification.actor.avatar.attached? ? url_for(notification.actor.avatar) : 'default-avatar.png', class: 'avatar') %>

      <div class="notification-content">
        <p>
          <strong><%= notification.actor.username %></strong>
          <%= notification.message %>
        </p>
        <span class="timestamp"><%= time_ago_in_words(notification.created_at) %> ago</span>
      </div>
    </div>
  <% end %>

  <% if @notifications.empty? %>
    <p class="empty">No notifications yet</p>
  <% end %>
</div>

<style>
.notifications-page {
  padding: 16px;
  background: white;
  min-height: 100vh;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
}

.notification {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.avatar {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  margin-right: 12px;
  object-fit: cover;
}

.notification-content {
  flex: 1;
  font-size: 14px;
}

.timestamp {
  font-size: 12px;
  color: #999;
}

.empty {
  text-align: center;
  color: #aaa;
  margin-top: 50px;
}
</style>
